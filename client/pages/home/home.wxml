<!--pages/home/home.wxml-->
<view class="container">
<scroll-view class="scroll-container" bindscrolltolower="bindDownLoad" scroll-y="true" enable-back-to-top="true" style="height:{{scrollHeight}}px;" >
  <block wx:for="{{postList}}" wx:for-item="post" wx:for-index="index"> 
    <view class='article'>
      <view class="head">
        <image class="avatar"src="{{post.head}}" background-size="cover"></image>
        <view class='title' id="{{post.id}}" bindtap='goDeatil'>{{post.title}}</view>
      </view>
      <view class='brief' id="{{post.id}}" bindtap='goDeatil'>
        {{post.post}}
      </view>
      <view class="info">
        <text>作者：{{post.user}}</text>
        <text>日期：{{post.ctime}}</text>
        <text>标签：{{post.tag}}</text>
      </view>
    </view>
  </block>
</scroll-view>
</view>
